<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amora_bg"
    android:padding="24dp"
    tools:context=".SignInActivity">

    <!-- App logo / icon (keep space as-is) -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/vector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- App name -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/amora_text_primary"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <!-- Subtitle / tagline -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_description_text"
        android:textSize="14sp"
        android:textColor="@color/amora_text_secondary"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp" />

    <!-- Bottom card with Google button -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSignIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="28dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/amora_card"
        app:strokeColor="@color/amora_stroke"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvSignInTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signIn_text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/amora_text_primary"
                android:layout_marginBottom="16dp" />

            <!-- Google Sign-In button (neon pill) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoogleSignIn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/continue_with_google_text"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="999dp"
                app:icon="@drawable/google_icon"
                app:iconTint="@null"
                app:iconPadding="12dp"
                app:iconGravity="textStart"
                android:backgroundTint="@color/amora_accent"
                style="@style/Widget.MaterialComponents.Button"
                tools:ignore="VisualLintButtonSize" />

            <!-- Progress bar while signing in -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:indeterminate="true" />

            <!-- Terms text -->
            <TextView
                android:id="@+id/tvTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms_condition_text"
                android:textSize="11sp"
                android:textColor="@color/amora_text_secondary"
                android:gravity="center"
                android:layout_marginTop="12dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
