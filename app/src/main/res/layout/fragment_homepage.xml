<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomepageFragment">

<!-- Fullscreen background -->

    <!-- your homepage bg PNG -->
    <ImageView
        android:id="@+id/img_home_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/homescreen_bg"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription" />

<!-- Avatar circle (top-left) -->

    <!-- white circle PNG -->
    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/img_placeholder"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />


    <!-- "Your Area" -->

    <!-- semi-white -->
    <TextView
        android:id="@+id/tv_your_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/your_area"
        android:textSize="14sp"
        android:textColor="#80FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/img_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

<!-- Location row: pin icon + text -->
<LinearLayout
    android:id="@+id/layout_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    app:layout_constraintTop_toBottomOf="@id/tv_your_area"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:ignore="UseCompoundDrawables">

    <!-- location PNG -->
    <ImageView
        android:id="@+id/img_location_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_map"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/m_bloc_space_south_jakarta"
        android:textSize="15sp"
        android:textColor="@android:color/white" />
</LinearLayout>

<!-- Thin divider under header area -->
<View
    android:id="@+id/divider_header"
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_marginTop="16dp"
    android:background="#26FFFFFF"
    app:layout_constraintTop_toBottomOf="@id/layout_location"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<!-- Tabs row: For You / Nearby -->
<LinearLayout
    android:id="@+id/layout_tabs"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="horizontal"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    app:layout_constraintTop_toBottomOf="@id/divider_header"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/tab_for_you"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/for_you_128"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tab_nearby"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:text="@string/nearby_64"
        android:textSize="16sp"
        android:textColor="#80FFFFFF" />
</LinearLayout>

<!-- Underline indicator for "For You" -->
<View
    android:id="@+id/indicator_for_you"
    android:layout_width="0dp"
    android:layout_height="2dp"
    android:layout_marginTop="6dp"
    android:background="@android:color/white"
    app:layout_constraintTop_toBottomOf="@id/layout_tabs"
    app:layout_constraintBottom_toTopOf="@id/divider_tabs"
    app:layout_constraintLeft_toLeftOf="@id/home_root"
    app:layout_constraintRight_toRightOf="@id/home_root"/>

<!-- Full-width thin line under tabs -->
<View
    android:id="@+id/divider_tabs"
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_marginTop="4dp"
    android:background="#26FFFFFF"
    app:layout_constraintTop_toBottomOf="@id/indicator_for_you"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<!-- Horizontal RecyclerView for profile cards -->
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rv_profiles"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:clipToPadding="false"
    app:layout_constraintTop_toBottomOf="@id/divider_tabs"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>