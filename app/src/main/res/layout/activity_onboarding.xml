<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".OnboardingActivity"
    android:id="@+id/main">

<!-- Grey background -->
<ImageView
    android:id="@+id/background_image"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:src="@drawable/background"
    android:scaleType="centerCrop"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:ignore="ContentDescription" />

<!-- Neon “H / star” shape -->
<ImageView
    android:id="@+id/shape_vector"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:src="@drawable/vector"
    android:scaleType="fitCenter"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintVertical_bias="0.45"
    tools:ignore="ContentDescription" />

<!-- Logo text "amora" -->
<ImageView
    android:id="@+id/logo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/logocontainer"
    android:layout_marginTop="40dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:ignore="ContentDescription" />

<!--  TEXT BLOCK  -->

<!-- Heading line 1 -->
<TextView
    android:id="@+id/tv_heading_line1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:text="Find"
    android:textSize="28sp"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/tv_heading_line2"
    app:layout_constraintVertical_chainStyle="packed" />

<!-- Heading line 2 (highlighted in neon) -->
<TextView
    android:id="@+id/tv_heading_line2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:text="Real Connections"
    android:textSize="28sp"
    android:textStyle="bold"
    android:textColor="#D9FF32"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/tv_heading_line3" />

<!-- Heading line 3 -->
<TextView
    android:id="@+id/tv_heading_line3"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:text="That Matter"
    android:textSize="28sp"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/tv_body" />

<!-- Description paragraph -->
<TextView
    android:id="@+id/tv_body"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="16dp"
    android:text="Amora helps you build genuine relationships with people who truly match your vibe"
    android:textSize="14sp"
    android:lineSpacingExtra="2dp"
    android:textColor="#D0D0D0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/button_container" />

<!--  BUTTON  -->
<FrameLayout
    android:id="@+id/button_container"
    android:layout_width="165dp"
    android:layout_height="52dp"
    android:layout_marginStart="24dp"
    android:layout_marginBottom="32dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <!-- Button background PNG -->
    <ImageView
        android:id="@+id/button_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/buttoncontainer"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription" />
    <!-- tools:ignore="ContentDescription" /> -->

    <!-- Text inside the button -->
    <TextView
        android:id="@+id/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_started_text"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center_vertical|start"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>
</FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>