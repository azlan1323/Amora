<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010">

    <!-- ───────────── TOP NAV BAR (FIXED) ───────────── -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nav_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_button"
            android:contentDescription="back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/btn_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_more_button"
            android:contentDescription="more_options"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ───────────── SCROLLABLE CONTENT (HEADER + DETAILS) ───────────── -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/details_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/nav_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar">

        <LinearLayout
            android:id="@+id/scroll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ───────── PROFILE HEADER ───────── -->
            <FrameLayout
                android:id="@+id/profile_header_container"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp">

                <ImageView
                    android:id="@+id/img_profile_header_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_bg" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_header_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:paddingTop="56dp">

                    <ImageView
                        android:id="@+id/img_profile_photo"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_photo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <LinearLayout
                        android:id="@+id/container_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/bg_distance_pill"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:id="@+id/img_distance_icon"
                            android:layout_width="12dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_distance" />

                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="0.7 km"
                            android:textColor="#F7F7F7"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_name_verified"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/container_distance">

                        <TextView
                            android:id="@+id/tv_name_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jade Walker, 24"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/img_verified"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/ic_verified_badge" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_audio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toBottomOf="@id/container_name_verified"
                        app:layout_constraintStart_toStartOf="@id/container_name_verified"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageButton
                            android:id="@+id/btn_play_audio"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_audio_play"
                            android:contentDescription="play_audio" />

                        <ImageView
                            android:id="@+id/img_audio_info"
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/bg_audio_info" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_audio_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="0:30"
                        android:textColor="#D0D0D0"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/container_audio"
                        app:layout_constraintStart_toStartOf="@id/container_audio" />

                    <ImageView
                        android:id="@+id/img_audio_slider"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="16dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/bg_audio_slider_track"
                        app:layout_constraintTop_toBottomOf="@id/tv_audio_duration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

            <!-- ───────── DETAILS SECTION (BIO / INTERESTS / PHOTOS) ───────── -->
            <LinearLayout
                android:id="@+id/details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="24dp">

                <!-- Bio Section -->
                <TextView
                    android:id="@+id/tv_bio_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bio"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_bio_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Drawn to quiet corners of the world and vibrant city life alike, Jade finds beauty in the unexpected. She believes moments are best remembered when felt deeply — whether it’s a sketch on a napkin or a song at midnight."
                    android:textColor="#CFCFCF"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp" />

                <!-- My Interest Section -->
                <TextView
                    android:id="@+id/tv_interest_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="My Interest"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_interests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:singleLine="false"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_actress"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actress"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_modeling"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Modeling"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_art"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Art"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_travel"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Traveling"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_music"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Music"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_painting"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Painting"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/chip_background_selector" />
                </com.google.android.material.chip.ChipGroup>

                <!-- Photos Section -->
                <TextView
                    android:id="@+id/tv_photos_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Photos"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/photos_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_photo_1"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/profile_bg" />

                    <ImageView
                        android:id="@+id/img_photo_2"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/profile_bg" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- ───────────── BOTTOM NAV BAR (FIXED) ───────────── -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_like"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_heart"
        android:contentDescription="like" />

        <ImageButton
            android:id="@+id/btn_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/btn_chat"
        android:contentDescription="chat" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
