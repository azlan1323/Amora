<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_profile_card"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:padding="12dp">

    <!-- ========= OUTER BOX BACKGROUND ========= -->
    <ImageView
        android:id="@+id/img_outer_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_profile_card"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========= INNER BOX (white card) ========= -->
    <LinearLayout
        android:id="@+id/layout_inner_box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_inner_profile_container"
        android:orientation="vertical"
        android:padding="14dp"
        app:layout_constraintTop_toTopOf="@id/img_outer_background"
        app:layout_constraintStart_toStartOf="@id/img_outer_background"
        app:layout_constraintEnd_toEndOf="@id/img_outer_background"
        app:layout_constraintBottom_toTopOf="@id/bottom_buttons">

        <!-- TOP: picture + distance + match pills -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Profile picture / gradient area -->
            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />

            <!-- Distance pill -->
            <LinearLayout
                android:id="@+id/layout_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_gravity="top|start"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center_vertical"
                android:background="@drawable/distance_container">

                <ImageView
                    android:id="@+id/img_distance_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_distance" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="3.2 km"
                    android:textSize="12sp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Match % pill -->
            <LinearLayout
                android:id="@+id/layout_match"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_margin="12dp"
                android:layout_gravity="top|end"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_yellow">

                <ImageView
                    android:id="@+id/img_match_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_heart" />

                <TextView
                    android:id="@+id/tv_match_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="98%"
                    android:textSize="12sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </FrameLayout>

        <!-- Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Name -->
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jennifer Coppen"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <!-- Bio -->
        <TextView
            android:id="@+id/tv_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Iâ€™m a passionate individual with a love for exploring new cultures and cuisines."
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Interests -->
        <LinearLayout
            android:id="@+id/layout_interests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chip_interest_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:background="@drawable/interest_container"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Modeling"
                android:textSize="11sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/chip_interest_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:background="@drawable/interest_container"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Hiking"
                android:textSize="11sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/chip_interest_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/interest_container"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Photography"
                android:textSize="11sp"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

    <!-- ========= BOTTOM BUTTONS (in outer box area) ========= -->
    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="@id/img_outer_background"
        app:layout_constraintStart_toStartOf="@id/img_outer_background"
        app:layout_constraintEnd_toEndOf="@id/img_outer_background">

        <ImageView
            android:id="@+id/btn_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:src="@drawable/btn_heart"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/btn_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_chat"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>