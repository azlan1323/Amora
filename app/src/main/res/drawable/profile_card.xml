<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Card background -->
    <ImageView
        android:id="@+id/card_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/profile_background"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="334:558" />

    <!-- Distance container (top-left) -->
    <ImageView
        android:id="@+id/distance_container"
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:src="@drawable/distance_container"
        android:scaleType="fitXY"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/card_background"
        app:layout_constraintTop_toTopOf="@id/card_background" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.3 km away"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@id/distance_container"
        app:layout_constraintEnd_toEndOf="@id/distance_container"
        app:layout_constraintTop_toTopOf="@id/distance_container"
        app:layout_constraintBottom_toBottomOf="@id/distance_container"
        android:gravity="center" />

    <!-- Rating / like container (top-right) -->
    <ImageView
        android:id="@+id/rating_container"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:src="@drawable/rating_container"
        android:scaleType="fitXY"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/card_background"
        app:layout_constraintTop_toTopOf="@id/card_background" />

    <!-- Profile image in the middle (optional â€“ can be small, or you can later replace
         with real photo / blur etc.) -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/profile_image"
        android:scaleType="centerCrop"
        android:background="@drawable/profile_circle_bg"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@id/distance_container"
        app:layout_constraintBottom_toTopOf="@id/profile_details_container"
        app:layout_constraintStart_toStartOf="@id/card_background"
        app:layout_constraintEnd_toEndOf="@id/card_background"
        app:layout_constraintVertical_bias="0.2" />

    <!-- PROFILE DETAILS CONTAINER (Name, interests, description, audio) -->
    <LinearLayout
        android:id="@+id/profile_details_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintStart_toStartOf="@id/card_background"
        app:layout_constraintEnd_toEndOf="@id/card_background"
        app:layout_constraintBottom_toBottomOf="@id/card_background">

        <!-- Name and verification -->
        <LinearLayout
            android:id="@+id/name_verification_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amora, 23"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <View
                android:id="@+id/verification_badge"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_verified_circle" />
        </LinearLayout>

        <!-- Interests container -->
        <LinearLayout
            android:id="@+id/interests_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/chip_interest_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="Music"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_interest_chip" />

            <TextView
                android:id="@+id/chip_interest_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="Travel"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_interest_chip" />

            <TextView
                android:id="@+id/chip_interest_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="Foodie"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_interest_chip" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Short bio goes here. Keep it to two lines so it looks clean."
            android:textSize="13sp"
            android:textColor="#E0E0E0" />

        <!-- Audio container (placeholder) -->
        <LinearLayout
            android:id="@+id/audio_container"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="#33FFFFFF">

            <TextView
                android:id="@+id/tv_audio_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voice intro"
                android:textSize="12sp"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

    <!-- BOTTOM ACTION BUTTONS (heart + chat) -->
    <LinearLayout
        android:id="@+id/bottom_button_container"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="@id/card_background"
        app:layout_constraintEnd_toEndOf="@id/card_background"
        app:layout_constraintBottom_toBottomOf="@id/card_background">

        <ImageView
            android:id="@+id/btn_heart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/btn_heart"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/btn_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:src="@drawable/btn_chat"
            android:scaleType="fitCenter" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
